<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather for <%= name %></title>
  </head>
  <body>
  <%- include('partials/_navbar.ejs') %>
  <h1>Weather for <%= name %></h1>
    <form action="/weather/<%= zip %>" method="POST">
      <p>
        Temperature: <%= main.temp %> <br>
        Weather: <%= weather.main %> <br>
      </p>
      <p>
        <label for="save">Save this location to a list? </label>
        <select id="listId" name="listId">
          <option value="" disabled selected hidden>Select a list</option>
          <% if (lists.length > 0) {%>
            <% lists.forEach((list) => { %>
              <option value="<%= list._id %>"><%= list.name %></option>
            <% })} %>
          <option value="new list">new list</option>
        </select>

        <input type="hidden" name="name" value="<%= name %>">        
        <input type="hidden" name="zip" value="<%= zip %>">

        <button type="submit">save</button>
        <%= message || '' %>
      </p>
    </form>
    <a href="/">back</a>
  </body>
  <script>
    // prevent empty form submittal
    const form = document.querySelector('form');
    const list = document.querySelector('#listId');

    form.addEventListener('submit', (event) => {
      if (!list.value) {
        event.preventDefault();
      }
    });
  </script>
</html>